@media screen and (max-width: 1169px)
	.courses-list 
		&-item:nth-child(4n+4)
			margin-right 10px
		
	.courses-list 
		&-item:nth-child(3n+3)
			margin-right 0px

@media screen and (max-width: 1113px)
	.cour-l-head
		font-size 18px	
		
@media screen and (max-width: 1090px)
	.main
		padding 0 15px
	
	.logo .head-logo
		font-size 28px

	.head-menu li
		font-size 16px
	
	.status .st-name
		font-size 16px
		
	.search-form-sub
		font-size 20px
		width 150px
		margin-left 20px
		
	.kn-your-btn
		font-size 20px
		width 250px
	
	.user-btn
		font-size 16px
	
	.user-btn-news
		font-size 11px
						
	.cour-l-head
		font-size 17px
	
	.courses-list 
		&-item
			width 270px
		
@media screen and (max-width: 1045px)
	.cour-l-head
		font-size 19px
	
	.head-menu li
		font-size 18px
	
	.courses-list li.large-3.medium-4
		width 33.33333%

@media screen and (max-width: 1024px)
	.user-btn-w
		text-align center
	.user-btn
		font-size 0
		width 90px
		height 80px
		display inline-block
		vertical-align top
		&::before
			display block
		&-news
			position absolute
			top 5px
			right 8px
			width 27px
			height 27px
			line-height 27px
			font-size 15px
			
		
@media screen and (max-width: 970px)	
	header
		margin-bottom 30px
		
	.h-menu-w
		width 100%
		
	.head-menu
		text-align center

	.user-btn-news
		font-size 9px
	
	.user-btn-news
		width 20px
		height 20px
		line-height 20px
			
	.status .st-name
		font-size 14px
	
	.status .st-stat
		font-size 14px
	
@media screen and (max-width: 909px)
	.courses-list 
		&-item
			margin-right 10px
	
	.cour-l-head
		font-size 16px
	
	.cour-l-params
		margin-bottom 30px
	
	.cour-l-params li
		font-size 14px
	
	.courses-list 
		&-item:nth-child(3n+3)
			margin-right 10px
	
	.courses-list 
		&-item:nth-child(2n+2)
			margin-right 0px
			
@media screen and (max-width: 760px)
	.courses-list 
		&-item
			max-width none
			width 47%
			text-align left
			background: #ae9f93;
			background: -moz-linear-gradient(top,  #ae9f93 0%, #dab797 34%, #efc090 68%, #eaaa5d 100%);
			background: -webkit-linear-gradient(top,  #ae9f93 0%,#dab797 34%,#efc090 68%,#eaaa5d 100%); 
			background: linear-gradient(to bottom,  #ae9f93 0%,#dab797 34%,#efc090 68%,#eaaa5d 100%); 
	
	.cour-l-logo
		display: inline-block
		vertical-align: top
		width: 150px
		border-radius: 10px 0 0
		padding: 0 15px
		box-sizing: border-box
		box-shadow none
		background transparent
	
	.cour-l-info
		padding-top 0
		background transparent
	
	.cour-l-head-name
		margin-bottom 15px
	
	.kn-your-head
		font-size 22px
		box-sizing border-box
	
	.courses .kn-your-head
		margin-bottom 20px
	
	.search-form-sub
		width 100px
		font-size 18px
	
	.kn-your-btn
		font-size 18px
		
@media screen and (max-width: 640px)
	.user-btn-w
		max-width none
		
	.user-btn
		margin-right 15px
	
	.auto-reg-btn
		float none
		margin 0 auto 10px

	.auto-reg
		max-width none
	
	.search-form
		text-align center

	.search-form-sub
		width 25%
		margin 0 0 0 5px
	
	.status-info
		padding 0 15px
	
		& .st-name
			font-size 20px
	
		& .st-stat
			font-size 18px
	
	.head-menu li
		font-size 20px
	
	.logo .head-logo
		font-size 35px
		margin-bottom 15px	
	
	.course-list
		&-item
			width 70% 
			margin 0 !important
			
@media screen and (max-width: 600px)
	.courses-list
		&-item
			width 75%
			min-width 295px
			margin 0 0 10px !important
	
	.cour-l
		&-logo
			width 200px		
		&-head
			font-size 20px
		&-params li
			font-size 18px